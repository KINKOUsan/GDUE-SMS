<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kinkou.mapper.MajorMapper">
    <select id="list">
        select * from majors
        <where>
            <if test="name != null and name != ''">
                name like concat('%',#{name},'%')
            </if>
        </where>
    </select>

    <select id="getById">
        select * from majors where id = #{id}
    </select>

    <insert id="insert">
        insert into majors(name) values(#{name})
    </insert>

    <update id="update">
        update majors set name = #{name} where id = #{id}
    </update>

    <delete id="delete">
        delete from majors where id = #{id}
    </delete>

</mapper>